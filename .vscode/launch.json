  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Launch and Debug Vue.js App",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "dockerFile": "${workspaceFolder}/Dockerfile",
      "context": "${workspaceFolder}",
      "containerName": "vuejs-app-devcontainer",
      "ports": [
        {
          "containerPort": 80,
          "hostPort": 8080
        }
      ],
      "extensions": [
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  ]
}
